<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bgDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ribbon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ðŸ´ Foodie"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/accent" />

    <!-- Scroll Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Pizza Card -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/cardBg"
                android:padding="12dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pizza"
                    android:scaleType="centerCrop" />

                <CheckBox
                    android:id="@+id/cbPizza"
                    android:text="Pizza\nâ‚¹250"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Burger Card -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/cardBg"
                android:padding="12dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/burger"
                    android:scaleType="centerCrop" />

                <CheckBox
                    android:id="@+id/cbBurger"
                    android:text="Burger\nâ‚¹180"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Pasta Card -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/cardBg"
                android:padding="12dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pasta"
                    android:scaleType="centerCrop" />

                <CheckBox
                    android:id="@+id/cbPasta"
                    android:text="Pasta\nâ‚¹220"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Coffee Card -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/cardBg"
                android:padding="12dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/coffee"
                    android:scaleType="centerCrop" />

                <CheckBox
                    android:id="@+id/cbCoffee"
                    android:text="Coffee\nâ‚¹120"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Submit -->
            <Button
                android:id="@+id/submitBtn"
                android:text="Place Order"
                android:textColor="@color/white"
                android:background="@color/accent"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
